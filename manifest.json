{
	"name": "Peace Extension",
	"version": "1.0",
	"description": "Remove hateful comments that are sent towards you.",
	"background":{
		"scripts": ["extension.js"],
		"persistent": false
	},
	"icons": {
		"32": "icon32.png"
	},
	"manifest_version": 2,
	"options_page": "options.html",
	"browser action":{
		"title" : "Peace",
		"default_icon": "icon16.png",
		"default_popup": "popup.html"
	},
	"options_page": "options.html",
	"permissions": [
		"background",
		"tabs",
		"http://*/*",
		"https://*/*"
	],
}
