{
	"name": "Peace Extension",
	"version": "1.0",
	"description": "Remove hateful comments that are sent towards you.",
	"background":{
		"scripts": ["extension.js"],
		"persistent": false
	},
	"browser action":{
		"title" : "Peace"
	},
	"options_page": "options.html",
	"permissions": [
		"background",
		"tabs",
		"http://*/*",
		"https://*/*"
	],
	"manifest_version": 2
}